<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>list all articles</title>
  <link href="https://unpkg.com/tailwindcss@^2/dist/tailwind.min.css" rel="stylesheet">
  <link rel="stylesheet" href="/stylesheets/style.css">
</head>

<body class="listArticles">
  <% include partials/header %>
    <section class="text-white ">
      <div class="max-w-screen-xl px-4 py-16 mx-auto sm:px-6 lg:px-8">
        <div class="max-w-lg mx-auto text-center">
          <h2 class="text-3xl font-bold sm:text-4xl">Welcome to TechWrites</h2>

          <p class="mt-4 text-gray-300">
            List of all the articles
          </p>

          <div class="px-12 mt-8">
            <% if(articles.length) { %>
              <% articles.forEach(article=> { %>
                <a href="/articles/<%= article.id %>"
                  class="text-3xl font-bold text-indigo-600 my-4 block bg-gray-200 px-2 py-3 rounded-lg">
                  <h1>
                    <%= article.title %>
                  </h1>
                </a>
                <% }) %>
                  <% } else { %>
                    <h1>No Articles Present</h1>
                    <% } %>

                      </>

          </div>


        </div>
    </section>

</body>

</html>